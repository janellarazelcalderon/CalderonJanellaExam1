<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearLayoutCard"
                android:layout_width="72dp">

                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/ImageIconStyle"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/sehun1" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/TextViewStyle"
                    android:fontFamily="cursive"
                    android:text="Oh Sehun"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayoutCard"
                android:layout_width="86dp">

                <ImageView
                    android:id="@+id/imageView3"
                    style="@style/ImageIconStyle"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/chanyeol" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/TextViewStyle"
                    android:layout_width="96dp"
                    android:fontFamily="cursive"
                    android:text="Park Chanyeol"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayoutCard"
                android:layout_width="97dp">

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/ImageIconStyle"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/baekhyun" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/TextViewStyle"
                    android:layout_width="103dp"
                    android:fontFamily="cursive"
                    android:text="Byun Baekhyun"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView2"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">


            <android.support.v7.widget.CardView
                android:layout_width="184dp"
                android:layout_height="115dp"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/colorLime"
                app:contentPadding="15dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We are One, We are EXO"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:fontFamily="sans-serif-condensed" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="“Make memories you know you'll never forget.”  ― Kai"
                        app:fontFamily="casual" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="184dp"
                android:layout_height="177dp"
                android:layout_marginBottom="44dp"
                android:layout_marginEnd="9dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="9dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="@color/colorCoral"
                app:contentPadding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cardView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For Life"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontFamily="sans-serif-condensed" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This life has twist and turns, but it's the  sweetest mystery when you're with me. We say a thousand words, when no one else is listening, I will be. No matter where we go, no matter what will come our way, we will still be together."
                        android:textSize="10sp"
                        app:fontFamily="casual" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="139dp"
                android:layout_height="79dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/cardView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.586">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="60dp"
                    app:srcCompat="@drawable/logo" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="132dp"
                android:layout_height="204dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.925">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="288dp"
                    android:background="@color/colorBlue"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="107dp"
                        app:cardBackgroundColor="@color/colorYellow">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="122dp"
                            android:layout_height="89dp"
                            android:layout_margin="10dp"
                            app:srcCompat="@drawable/monster" />

                    </android.support.v7.widget.CardView>

                    <MultiAutoCompleteTextView
                        android:id="@+id/multiAutoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E X O Monseuta"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:fontFamily="sans-serif-condensed" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:text="Accept me as I am, forget your fearful worries"
                            android:textColor="@android:color/background_light"
                            android:textSize="9sp"
                            app:fontFamily="casual" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>